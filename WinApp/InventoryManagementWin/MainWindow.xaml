<Window x:Class="InventoryClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="在庫管理" Height="500" Width="800">
    <StackPanel Margin="10">
        <Button Name="LoginButton" Content="ログイン" Click="LoginButton_Click" Margin="0,0,0,10"/>
        <Button Name="LoadButton" Content="在庫取得" Click="LoadButton_Click" Margin="0,0,0,10"/>
        <Grid>
            <DataGrid Name="InventoryGrid" AutoGenerateColumns="False" ItemsSource="{Binding}" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="品名" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="分類" Binding="{Binding Category}" />
                    <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" />
                    <DataGridTextColumn Header="価格" Binding="{Binding Price}" />
                    <DataGridTextColumn Header="バーコード" Binding="{Binding Barcode}" />
                    <DataGridTextColumn Header="メーカー" Binding="{Binding Supplier}" />
                    <DataGridTextColumn Header="保存場所" Binding="{Binding Storage_Location}" />
                    <DataGridTextColumn Header="入庫日時" Binding="{Binding Entry_DateT, StringFormat=yyyy/MM/dd HH:mm}" />
                    <DataGridTextColumn Header="期限" Binding="{Binding Expiration_Date, StringFormat=yyyy/MM/dd}" />
                    <DataGridTextColumn Header="メモ" Binding="{Binding Notes}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>
</Window>
